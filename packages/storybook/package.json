{
  "name": "storybook",
  "private": true,
  "version": "1.3.0",
  "description": "Little Spoon Storybook",
  "scripts": {
    "build": "yarn copy-changelog && build-storybook",
    "clean": "rm -rf storybook-static src/stories/changelog",
    "copy-changelog": "mkdir -p src/stories/changelog && ts-node scripts/copy-changelog",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "storybook": "start-storybook -p 6006"
  },
  "dependencies": {
    "@littlespoon/button": "1.0.0",
    "@littlespoon/theme": "1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "babel-loader": "^8.2.2"
  }
}
